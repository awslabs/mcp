server:
  host: localhost
  port: 8080
  ssl:
    enabled: true
    cert_path: /etc/ssl/certs/server.crt
    key_path: /etc/ssl/private/server.key

database:
  primary:
    host: db-primary.example.com
    port: 5432
    name: production
  replica:
    host: db-replica.example.com
    port: 5432
    name: production

logging:
  level: INFO
  format: json
  outputs:
    - type: console
    - type: file
      path: /var/log/app.log

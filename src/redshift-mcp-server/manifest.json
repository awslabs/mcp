{
  "author": {
    "email": "203918161+awslabs-mcp@users.noreply.github.com",
    "name": "Amazon Web Services, Inc."
  },
  "description": "Amazon Redshift MCP Server - Discover, explore, and query Amazon Redshift clusters and serverless workgroups",
  "dxt_version": "0.1",
  "homepage": "https://awslabs.github.io/mcp/servers/redshift-mcp-server/",
  "license": "Apache-2.0",
  "name": "redshift-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/mcp"
  },
  "server": {
    "entry_point": "",
    "mcp_config": {
      "args": [
        "awslabs.redshift-mcp-server@latest"
      ],
      "command": "uvx",
      "env": {
        "AWS_PROFILE": "${user_config.AWS_PROFILE}",
        "AWS_DEFAULT_REGION": "${user_config.AWS_DEFAULT_REGION}",
        "AWS_REGION": "${user_config.AWS_REGION}",
        "AWS_SHARED_CREDENTIALS_FILE": "${user_config.AWS_SHARED_CREDENTIALS_FILE}",
        "AWS_CONFIG_FILE": "${user_config.AWS_CONFIG_FILE}",
        "FASTMCP_LOG_LEVEL": "${user_config.FASTMCP_LOG_LEVEL}"
      }
    },
    "type": "python"
  },
  "tools": [
    {
      "description": "Discover available Redshift clusters and serverless workgroups",
      "name": "redshift_discover_clusters"
    },
    {
      "description": "List databases in a Redshift cluster or workgroup",
      "name": "redshift_list_databases"
    },
    {
      "description": "List schemas in a Redshift database",
      "name": "redshift_list_schemas"
    },
    {
      "description": "List tables in a Redshift schema",
      "name": "redshift_list_tables"
    },
    {
      "description": "Get detailed information about a Redshift table",
      "name": "redshift_describe_table"
    },
    {
      "description": "Execute SQL queries on Redshift (READ ONLY mode)",
      "name": "redshift_execute_query"
    },
    {
      "description": "Get query execution history",
      "name": "redshift_get_query_history"
    }
  ],
  "user_config": {
    "AWS_DEFAULT_REGION": {
      "type": "string",
      "title": "AWS_DEFAULT_REGION",
      "description": "The default AWS region",
      "required": false,
      "sensitive": false,
      "default": "us-east-1"
    },
    "AWS_REGION": {
      "type": "string",
      "title": "AWS_REGION",
      "description": "The AWS region",
      "required": false,
      "sensitive": false,
      "default": "us-east-1"
    },
    "AWS_PROFILE": {
      "type": "string",
      "title": "AWS_PROFILE",
      "description": "The AWS profile",
      "required": false,
      "sensitive": false,
      "default": "default"
    },
    "AWS_SHARED_CREDENTIALS_FILE": {
      "type": "string",
      "title": "AWS_SHARED_CREDENTIALS_FILE",
      "description": "The AWS shared credentials file location",
      "required": false,
      "sensitive": false,
      "default": "$HOME/.aws/credentials"
    },
    "AWS_CONFIG_FILE": {
      "type": "string",
      "title": "AWS_CONFIG_FILE",
      "description": "The AWS configuration file location",
      "required": false,
      "sensitive": false,
      "default": "$HOME/.aws/config"
    },
    "FASTMCP_LOG_LEVEL": {
      "type": "string",
      "title": "FASTMCP_LOG_LEVEL",
      "description": "The FastMCP log level",
      "required": false,
      "sensitive": false,
      "default": "ERROR"
    }
  },
  "version": "0.0.3"
}
